@page
@model ProyectoCiclo3.App.Frontend.Pages.EditAvionModel
@{
    var avion = Model.Avion;
}
 
<div class="text-center">
    <form method="post">
  <label for="nombre" class="form-label">Marca:</label>
  <input type="text" class="form-control" id="marca" name="marca" placeholder="Marca" asp-for="@avion.marca">
  <label for="tipo" class="form-label">Modelo:</label>
  <input type="text" class="form-control" id="modelo" name="modelo" placeholder="Modelo"asp-for="@avion.modelo">
  <label for="int" class="form-label">Num_Asientos:</label>
  <input type="int" class="form-control" id="num_asientos" name="num_asientos" placeholder="Num_Asientos"asp-for="@avion.num_asientos">
  <label for="tipo" class="form-label">Wc:</label>
  <input type="text" class="form-control" id="wc" name="wc" placeholder="Wc"asp-for="@avion.wc">
  <label for="tipo" class="form-label">Cap_Maxima:</label>
  <input type="text" class="form-control" id="cap_maxima" name="cap_maxima" placeholder="Cap_Maxima"asp-for="@avion.cap_maxima">
  <hr>
  <button type="submit" class="btn btn-success">Enviar</button>
</form>
</div>
