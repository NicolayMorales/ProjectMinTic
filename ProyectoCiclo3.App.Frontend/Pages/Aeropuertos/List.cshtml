@page
@model ProyectoCiclo3.App.Frontend.Pages.ListAeropuertoModel
@{
}


h1>Listado de Aeropuerto</h1>
<table class="table">
    @foreach (var aeropuerto in Model.Aeropuertos)
    {
      <tr>
      <th>#</th>
      <th>Nombre</th>
       <th>Ciudad</th>
      <th>Pais</th>
      <th>Coord_x</th>
      <th>Coord_y</th>
    </tr>
        <tr>
            <td>@aeropuerto.#</td>
            <td>@aeropuerto.nombre</td>
            <td>@aeropuerto.ciudad</td>
            <td>@aeropuerto.pais</td>
            <td>@aeropuerto.coord_x</td>
            <td>@aeropuerto.coord_y</td>
            <td>
              <a class="btn btn-info" asp-page="./Details" asp-route-aeropuertosId="@aeropuerto.id"><i class="fas fa-adjust"></i>Ver</a>
              <a class="btn btn-info" asp-page="./Edit" asp-route-aeropuertosId="@aeropuerto.id">Editar</a>
             <form method="post">
            <input type="number" class="form-control d-none" id="id" name="id" placeholder="id" asp-for="@aeropuerto.id">
              <button type="submit"class="btn btn-danger" href="">Eliminar</button>
            </form>
              </td>
        </tr>
    }
</table>
