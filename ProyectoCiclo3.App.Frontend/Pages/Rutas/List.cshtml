@page
@model ProyectoCiclo3.App.Frontend.Pages.ListRutaModel
@{
}

<table class="table">
    @foreach (var ruta in Model.Rutas)
    {
         <tr>
            <td>@ruta.origen</td>
            <td>@ruta.destino</td>
            <td>@ruta.tiempo_estimado</td>
            <td>
              <a class="btn btn-info" asp-page="./Details" asp-route-rutasId="@ruta.id">Ver</a>
              <a class="btn btn-info" asp-page="./Edit" asp-route-rutasId="@ruta.id">Editar</a>
              <form method="post">
            <input type="number" class="d-none" id="id" asp-for="@ruta.id">
              <button type="submit"class="btn btn-danger">Eliminar</button>
            </form>
              </td>
        </tr>
    }
</table>